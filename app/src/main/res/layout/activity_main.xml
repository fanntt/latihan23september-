<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="244dp"
            android:layout_height="305dp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            app:srcCompat="@drawable/logo_politeknik_negeri_padang__2014_" />

        <TextView
            android:id="@+id/txtSelamatDatang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Selamat Datang Di Politkenik Negeri Padang"
            android:textColor="#F16622" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Limau Manih,Padang, Sumbar" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:backgroundTint="#F06622"
            android:text="Manajemen Informatika"
            app:cornerRadius="1dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#F16622"
            android:text="Teknik Komputer"
            app:cornerRadius="1dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#F16622"
            android:text="Galeri Foto"
            app:cornerRadius="1dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>